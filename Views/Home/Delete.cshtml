@model finalProject.Models.User
@{
    ViewData["Title"] = "Delete User";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm border-0 border-danger">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">
                    <i class="fas fa-exclamation-triangle me-2"></i>Delete User
                </h4>
            </div>
            <div class="card-body p-4">
                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-info-circle me-2"></i>
                    <strong>Warning!</strong> Are you sure you want to delete this user? This action cannot be undone.
                </div>

                <div class="user-details mb-4">
                    <div class="d-flex align-items-center mb-3 p-3 bg-light rounded">
                        <div class="user-avatar me-3">
                            <i class="fas fa-user-circle fa-3x text-muted"></i>
                        </div>
                        <div>
                            <h5 class="mb-1 fw-bold">@Model.Name</h5>
                            <p class="mb-0 text-muted">
                                <i class="fas fa-envelope me-2"></i>@Model.Email
                            </p>
                            <small class="text-muted">ID: @Model.Id</small>
                        </div>
                    </div>
                </div>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-danger btn-lg flex-fill">
                            <i class="fas fa-trash me-2"></i>Yes, Delete User
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

